<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="uniform">
	
	<select id="selectId" resultType="uniform" parameterType="org.baseball.kia.taejeong.entity.AccountVo">
		SELECT *
		FROM UNIFORM A 
		LEFT OUTER JOIN ACCOUNT B
		ON A.BUYER = B.ID;
	</select>
	
	<select id="selectPlayerNo" resultType="uniform">
		SELECT * FROM UNIFORM A
		LEFT OUTER JOIN PLAYER B
		ON A.PLAYER_NO = B.NO  
	</select>
	
	<insert id="insetBasket" parameterType="uniform">
		INSERT INTO
	</insert>
	
	
