<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="file">
	
	<select id="getBoardNo" resultType="int">
 		SELECT NVL(MAX(BOARD_NO),0) + 1
 		FROM FILE_DATA
 	</select>
 	
	<select id="getNoticeNo" resultType="int">
 		SELECT NVL(MAX(NOTICE_NO),0) + 1 
 		FROM BOARD
 	</select>
	
 	<insert id="insertFileList" parameterType="file">
		INSERT INTO FILE_DATA
		VALUES (FILE_NO_SEQ.NEXTVAL, #{boardNo}, #{noticeNo}, 
		#{fileName}, #{fileType}, #{fileSize}, #{fileLocation})
	</insert>
	
	<select id="getFileList" parameterType="int" resultType="file">
		SELECT * FROM FILE_DATA
		WHERE BOARD_NO = #{board_no}
	</select>
	
	<delete id="deleteFile" parameterType="file">
		DELETE FROM FILE_DATA
		WHERE BOARD_NO = #{board_no} AND FILE_NO = #{fileNo}
	</delete>
	
	<delete id="deleteFileList" parameterType="int">
		DELETE FROM FILE_DATA
		WHERE BOARD_NO = #{board_no}
	</delete>
</mapper> 