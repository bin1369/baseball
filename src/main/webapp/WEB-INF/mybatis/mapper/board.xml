<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<insert id="insertOne" parameterType="board">
		INSERT INTO BOARD
		VALUES
		(BOARD_SEQ.NEXTVAL, #{title},#{content}, SYSDATE, #{writer},
		#{views},
		#{likes} )
	</insert>
	<select id="selectAll" resultType="board">
		SELECT * FROM BOARD ORDER
		BY
		BOARD_NO DESC
	</select>
	<select id="selectOne" resultType="board">
		SELECT
		* FROM BOARD WHERE
		BOARD_NO = #{boardNo}
	</select>
	<update id="updateCnt" parameterType="int">
		UPDATE BOARD SET VIEWS =
		VIEWS + 1 WHERE BOARD_NO = #{boardNo}
	</update>
	<delete id="deleteBoardByReportId"> <!-- 차단계정 게시물 삭제 -->
		DELETE FROM BOARD
		WHERE WRITER = #{id}
	</delete>
	<delete id="boardDelete" parameterType="int">
		DELETE FROM BOARD WHERE
		BOARD_NO = #{boardNo}
	</delete>
	<update id="boardUpdate" parameterType="board">
		UPDATE BOARD SET TITLE =
		#{title}, CONTENT = #{content} WHERE BOARD_NO = #{boardNo}
	</update>

</mapper> 